QMainWindow {
  border-image:url(LittleFingerpattern.png);
}

*[doomed="true"] {
  background-color: transparent;
  border: none;
}

/* shortcut dialog */
*[shortcuts="true"] {
  background-color: #485261;
}

*[city_name_button="true"] {
  font-weight: bold italic;
  border: 0px;
  background: transparent;
  text-align: right;
}

*[doomchat="true"] {
  background-color: #121212;
  color: white;
  border: 1px solid gray;
}

*[themed_choice="true"] {
  background-color: #121212;
  color: white;
  border: 1px solid gray;
}

*[themed_border="true"] {
  border: 2px solid #3399FF;
}

chat_widget, message_widget {
  background-color: #00002f;
  border: 1px solid #00002f;
  border-radius: 3px;
}

/* color of border only - set the same as background */
*[messagewindow="true"] {
  color: #00002f;
}

/* color of border only*/
*[top_bar="true"] {
  color: #000000;
}

/* Help dialog tile output 3 labels */
*[foodlab="true"] {
  background:#00ee01;
  color: black;
}

*[shieldlab="true"] {
  background: #e4e4e4;
  color: black;
}

*[ecolab="true"] {
  background: #eeee12;
  color: black;
}

*[city_scroll="true"] {
  border: none;
  border-radius: none;
}

*[unit_wait_table="true"] {
  border: 1px solid #1d5994;
  background-color: rgb(0,0,25);
}

*[civstatus="true"] {
  color: white;
}
*[civstatus_bg="true"] {
   background-color: rgb(0,0,0,125);
}

