  padding: 5px;
  top: -2px;
}

QTabBar::tab {
  background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                    stop: 0   #485261,
                                    stop: 0.6 #262b33,
                                    stop: 1.0 #38404c);
  border-left: 1px solid #3399FF;
  border-top: 1px solid #3399FF;
  border-bottom: 1px solid #3399FF;
  border-right: 1px solid #1f5d9c;
  border-top-right-radius: 5;
  border-top-left-radius: 5;
  color: white;
  margin-left: -1px;
  padding: 5px;
  min-width: 80px;
}

QTabBar::tab:!selected {
  margin-top: 5px;
}

QTabBar::tab:hover {
  background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                    stop: 0   #00000055,
                                    stop: 0.6 black,
                                    stop: 1.0 #00000055);
}

QTabBar::tab::selected {
  background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                    stop: 0   transparent,
                                    stop: 0.6 #38404c,
                                    stop: 0.9 #424b57);
  border-left: 1px solid #3399FF;
  border-top: 1px solid #3399FF;
  border-right: 1px solid #2c84dc;
  border-bottom: 1px solid #424b57;
  border-top-right-radius: 5;
  border-top-left-radius: 5;
  color:white;
  margin-bottom: -3px;
  margin-top: 2px;
  padding: 5px;
}

