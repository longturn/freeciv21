QMainWindow {
  border-image:url(LittleFingermain.jpg);
}

*[doomed="true"] {
  background-color: #cedccd;
  border: none;
}

*[shortcuts="true"] {
  background-color: #cedccd;
  border: none;
}

*[city_name_button="true"] {
  font-weight: bold italic;
  border: 0px;
  background: transparent;
  text-align: right;
}

*[doomchat="true"] {
  background-color: white;
  color: black;
  border: 1px solid #c3b48e;
}

/* Help dialog tile output 3 labels */
*[foodlab="true"] {
  background:#00ee01;
  color: black;
}

*[shieldlab="true"] {
  background: #e4e4e4;
  color: black;
}

*[ecolab="true"] {
  background: #eeee12;
  color: black;
}

/* color of border only - set the same as background */
*[messagewindow="true"] {
  color: #000000;
}
/* color of border only*/
*[sidebar="true"] {
  color: #000000;
}

*[themed_choice="true"] {
  color: #000000;
  background-color: #cedccd;
  border: 2px solid black;
}

*[unit_wait_table="true"] {
  background-color: rgba(0,0,0,175);
  border: 1px solid #006633;
  color: white;
}

*[civstatus_bg="true"] {
   background-color: rgba(0,0,0,125);
}

*[civstatus="true"] {
  color: white;
}

